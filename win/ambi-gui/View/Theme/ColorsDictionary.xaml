<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ambi_gui"
                    xmlns:theme="clr-namespace:ambi_gui.View.Theme">
    
    <ObjectDataProvider x:Key="WindowsColorizationProvider" 
                        ObjectType="{x:Type theme:WindowsColorizationProvider}" 
                        MethodName="GetWindowColorizationColor"/>

    <SolidColorBrush x:Key="ColorBackground" Color="White" />
    <SolidColorBrush x:Key="ColorMouseOver" Color="#DDDDDD" />
    <SolidColorBrush x:Key="ColorMouseDown" Color="#CCCCCC" />
    <SolidColorBrush  x:Key="ColorWindows" Color="{Binding Source={StaticResource WindowsColorizationProvider}}" />
    
</ResourceDictionary>